#!/usr/bin/env ruby
# frozen_string_literal: true

$LOAD_PATH.unshift(File.expand_path("#{File.dirname(__FILE__)}/../lib"))
require 'pstars'

hand_history = Pstars::HandHistory.new(ENV.fetch('HH'))
file = ENV.fetch('F')

nick = ARGV[1]

case ARGV[0]
when 'known'
  hand_history.known_cards(file, nick)
when 'stats'
  hand_history.calculate_stats(file, nick)
end
